doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="javascripts/jquery.min.js")
    link(rel='stylesheet', href='/stylesheets/bootstrap-3.0.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-3.0.2/css/bootstrap-theme.min.css')
    script(src="javascripts/register.js")

  body
    h1= title
    .container
      .content
        .col-md-4.col-md-offset-4
          h2 Service Login
          div= error
          div
            form(action="/serviceLogin", method="POST")
              p
                input.form-control(name="username", type="text", placeholder="用户名")
              p
                input.form-control(name="password", type="password", placeholder="密码")
              p
                button.btn.btn-lg.btn-primary.btn-block(type="submit") Log in